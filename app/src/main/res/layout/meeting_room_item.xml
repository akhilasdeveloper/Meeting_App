<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/meeting_room_item_color"
                android:orientation="horizontal"
                android:background="@drawable/main_background"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/system_for"
            android:text="Meeting Room 1"
            android:id="@+id/meeting_room_item_name"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_room_item_radio"
            android:buttonTint="@color/system_for"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_twotone_edit_24"
            android:layout_marginEnd="10dp"
            app:tint="@color/system_for"
            android:id="@+id/meeting_room_item_edit"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_twotone_delete_24"
            android:layout_marginEnd="10dp"
            app:tint="@color/system_for"
            android:id="@+id/meeting_room_item_delete"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>